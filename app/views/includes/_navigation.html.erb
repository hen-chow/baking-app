<div class="ui inverted segment">
  <div class="ui inverted secondary pointing menu">
    <%= link_to "Home", root_path, class: "active item" %>
    <%= link_to "Baking Categories", "/#baking-categories", class: "item" %>
    <div class="right menu">
      <% if @current_user.present? %>
        <div class="ui item">
          Welcome back, <%= @current_user.name %>!
        </div>
        <%= link_to "Your profile page", user_path(@current_user.id), class: "ui item" %>
        <%= link_to "Log out", logout_path, method: :delete, class: "ui item" %>
      <% else %>
        <%= link_to "Sign up", new_user_path, class: "ui item" %>
        <%= link_to "Log in", login_path, class: "ui item" %>
      <% end %>
    </div>
  </div>
</div>
